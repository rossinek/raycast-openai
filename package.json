{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "hex",
  "title": "hex",
  "description": "UI for GPT helpers",
  "icon": "command-icon.png",
  "author": "rosickey",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "translate",
      "title": "Translate with GPT",
      "description": "A simple utility to translate text with GPT",
      "mode": "view"
    },
    {
      "name": "translate-selection",
      "title": "Translate selected text with GPT",
      "description": "Shortcut to translate with GPT",
      "mode": "no-view"
    },
    {
      "name": "generic-assistant",
      "title": "AMA with GPT (chat)",
      "description": "A generic chat with GPT",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "apiKey",
      "description": "OpenAI API key",
      "type": "password",
      "required": true,
      "title": "OpenAI API key"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.48.7",
    "openai": "^3.2.1"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
