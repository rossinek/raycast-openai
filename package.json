{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "hex",
  "title": "hex",
  "description": "UI for GPT helpers",
  "icon": "command-icon.png",
  "author": "rosickey",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "generic-completion",
      "title": "GPT Generic Prompt",
      "description": "Write prompt for GPT from scratch",
      "mode": "view"
    },
    {
      "name": "use-selection",
      "title": "Use Selection",
      "description": "Use currently selected text from front-most application in other commands",
      "mode": "no-view"
    },
    {
      "name": "command-picker",
      "title": "Pick a Command",
      "description": "Used by \"Use Selection\" command to pick what to do with the current selection",
      "mode": "view"
    },
    {
      "name": "generic-chat",
      "title": "GPT Generic Chat",
      "description": "A generic chat with GPT",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "apiKey",
      "description": "OpenAI API key",
      "type": "password",
      "required": true,
      "title": "OpenAI API key"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.48.9",
    "openai": "^3.2.1"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "prettier": "^2.8.7",
    "typescript": "^5.0.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
